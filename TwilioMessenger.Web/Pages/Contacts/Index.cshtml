@page
@model TwilioMessenger.Web.Pages.Contacts.IndexModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Manage Contacts</h2>
    <a asp-page="./Create" class="btn btn-primary">Add New Contact</a>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Contacts.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Type</th>
                            <th>Opted In</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td>@contact.Name</td>
                                <td>@contact.PhoneNumber</td>
                                <td>@contact.Type</td>
                                <td>
                                    @if (contact.IsOptedIn)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@contact.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <a asp-page="./Delete" asp-route-id="@contact.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No contacts found. <a asp-page="./Create">Add a new contact</a> to get started.
            </div>
        }
    </div>
</div>